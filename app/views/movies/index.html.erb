<h1>Movies</h1>
<%= form_tag movies_path, method: :get do %>
<%= text_field_tag :character, params[:character], placeholder:'enter character name' %>
<%= submit_tag "Search" %>
<% end %>

<%= form_tag movies_path, method: :get do %>
<%= text_field_tag :movie, params[:movie], placeholder:'enter movie name' %>
<%= submit_tag "Search" %>
<% end %>

<br/>
<br/>

<% @movies.each do |movie| %>
	<div>Movie: <%= movie.name %></div>
	<div>Year: <%= movie.year %></div>
	<% movie.characters.each do |character| %>
		<div>Character: <%= character.name %></div>
	<% end %>
	<%= link_to "Show", movie_path(movie) %>
	<br/>
	<br/>
<% end %>

